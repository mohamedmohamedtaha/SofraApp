<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemes" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="StyleForImageViewForSplashActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/splash</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




    <style name="StyleForImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimens_height_logo</item>
        <item name="android:layout_marginTop">@dimen/dimens_xl</item>
        <item name="android:src">@mipmap/logo</item>
    </style>
    <style name="StyleForImageViewCustom">
        <item name="android:layout_width">@dimen/dimens_hundrand_ten</item>
        <item name="android:layout_height">@dimen/dimens_hundrand_ten</item>
        <item name="android:layout_marginTop">@dimen/dimens_xl</item>

    </style>

        <style name="StyleEditText">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:paddingEnd">@dimen/dimens_l</item>
            <item name="android:layout_marginStart">@dimen/dimens_l</item>
            <item name="android:layout_marginTop">@dimen/dimens_l</item>
            <item name="android:layout_marginEnd">@dimen/dimens_l</item>
            <item name="android:background">@drawable/shape</item>
        </style>

        <style name="StyleEditTextNull">
            <item name="android:fontFamily">@font/cairo_regular</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:background">@null</item>
        </style>

        <style name="StyleProgressBar">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_centerInParent">true</item>
            <item name="android:indeterminateDrawable">@drawable/custom_prograsbar</item>
            <item name="android:indeterminate">true</item>
            <item name="android:visibility">invisible</item>
        </style>


        <style name="StyleButtonWhite">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">@android:color/white</item>
            <item name="android:textSize">@dimen/txt_size_m</item>
            <item name="android:fontFamily">@font/cairo_bold</item>
            <item name="android:layout_marginTop">@dimen/dimens_m</item>
            <item name="android:layout_marginStart">@dimen/dimens_l</item>
            <item name="android:layout_marginEnd">@dimen/dimens_l</item>
            <item name="android:layout_marginBottom">@dimen/dimens_l</item>

        </style>
    <style name="StyleButtonBlack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/txt_size_m</item>
        <item name="android:fontFamily">@font/cairo_bold</item>
        <item name="android:layout_marginTop">@dimen/dimens_m</item>
        <item name="android:layout_marginStart">@dimen/dimens_l</item>
        <item name="android:layout_marginEnd">@dimen/dimens_l</item>
        <item name="android:layout_marginBottom">@dimen/dimens_l</item>

    </style>
    <!-- Customize Spinner for Fragment StokeWearehouse. -->
    <style name="SpinnerForFragment" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimens_xxxxl</item>

    </style>



</resources>





