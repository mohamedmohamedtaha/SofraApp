<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".app.ui.fragment.restaurant.restaurantCycle.RegisterAsRestaurantTwoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_l"
            android:layout_marginTop="@dimen/dimens_xxxl"
            android:layout_marginEnd="@dimen/dimens_l"
            android:background="@drawable/background_spinner">

            <Spinner
                android:id="@+id/RegisterAsRestaurantTwoFragment_SP_Spicefed"
                style="@style/SpinnerForFragment"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:popupBackground="@android:color/white" />

        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout

            style="@style/StyleEditText">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/RegisterAsRestaurantTwoFragment_Min_request"
                style="@style/StyleEditTextNull"
                android:hint="@string/min_order"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            style="@style/StyleEditText">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/RegisterAsRestaurantTwoFragment_Price_Delevery"
                style="@style/StyleEditTextNull"
                android:hint="@string/price_delevery"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dimens_l"
                android:layout_marginEnd="@dimen/dimens_xl"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/data_contact"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size_l" />

            <ProgressBar
                android:id="@+id/RegisterAsRestaurantTwoFragment_Progress_Bar"
                style="@style/StyleProgressBar" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dimens_m"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:paddingEnd="@dimen/dimens_l">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/RegisterAsRestaurantTwoFragment_WhatsApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/cairo_regular"
                    android:hint="@string/whatsapp"
                    android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dimens_m"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:paddingEnd="@dimen/dimens_l">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/RegisterAsRestaurantTwoFragment_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/cairo_regular"
                    android:hint="@string/phone"
                    android:inputType="phone" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/RegisterAsRestaurantTwoFragment_IM_Add_Photo"
                android:layout_width="@dimen/dimens_hundrand"
                android:layout_height="@dimen/dimens_hundrand"
                android:layout_marginTop="@dimen/dimens_l"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginBottom="@dimen/dimens_l"
                android:background="@android:color/darker_gray"
                android:src="@drawable/ic_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimens_xl"
                android:fontFamily="@font/cairo_regular"
                android:text="@string/photo_store"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size_l" />
        </LinearLayout>

        <Button
            android:id="@+id/RegisterAsRestaurantTwoFragment_BT_Register"
            style="@style/StyleButtonWhite"
            android:background="@color/colorButtonLogin"
            android:text="@string/regester" />
    </LinearLayout>

</ScrollView>