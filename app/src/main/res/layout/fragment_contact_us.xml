<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".app.ui.fragment.mainCycle.ContactUsFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.design.widget.TextInputLayout

            style="@style/StyleEditText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ET_Name"
                style="@style/StyleEditTextNull"
                android:hint="@string/name"

                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            style="@style/StyleEditText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ET_Email"
                style="@style/StyleEditTextNull"
                android:hint="@string/email"

                />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout

            style="@style/StyleEditText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ET_Phone"
                style="@style/StyleEditTextNull"
                android:hint="@string/phone"

                />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/StyleEditText"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ET_Content"
                style="@style/StyleEditTextNull"
                android:hint="@string/content"
                android:inputType="textMultiLine"
                android:lines="5"

                />

        </android.support.design.widget.TextInputLayout>

            <RadioGroup
                android:id="@+id/RG_Content"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/RB_Estalam"
                    android:paddingEnd="30dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/estalam"
                    />


                <RadioButton
                android:id="@+id/RB_Suggest"
                android:paddingEnd="30dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/suggest"/>
                <RadioButton
                    android:id="@+id/RB_Problem"
                    android:paddingEnd="30dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/problem"/>

    </RadioGroup>
                <Button
            android:layout_marginTop="@dimen/txt_size_xl"
            android:id="@+id/BT_Send_Message"
            android:layout_width="match_parent"
            android:background="@color/colorButtonLogin"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:fontFamily="@font/cairo_bold"
            android:text="@string/send"
            android:layout_marginEnd="@dimen/dimens_l"
            android:layout_marginStart="@dimen/dimens_l"
            android:layout_marginBottom="@dimen/dimens_l"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/dimens_xxl"
            android:layout_width="match_parent"
            android:layout_marginEnd="@dimen/dimens_xxxxl"
            android:layout_marginStart="@dimen/dimens_xxxxl"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dimens_xxxxl"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IM_Instgram"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_instgram"
                />
            <ImageView
                android:id="@+id/IM_Twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_twitter"
                android:layout_marginStart="@dimen/dimens_xxl"

                />
            <ImageView
                android:id="@+id/IM_Face_Book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_face"
                android:layout_marginStart="@dimen/dimens_xxl"
                android:layout_marginEnd="@dimen/dimens_xxl"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/content_us_on"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/cairo_bold"/>
        </LinearLayout>


    </LinearLayout>
    <ProgressBar
        android:id="@+id/Content_Us_Progress"
        style="@style/StyleProgressBar"

        />
</RelativeLayout>

</ScrollView>