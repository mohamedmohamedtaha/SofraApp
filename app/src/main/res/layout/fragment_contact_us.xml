<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".app.ui.fragment.mainCycle.ContactUsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout style="@style/StyleEditText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ContactUsFragment_TIET_Name"
                    style="@style/StyleEditTextNull"
                    android:hint="@string/name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout style="@style/StyleEditText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ContactUsFragment_TIET_Email"
                    style="@style/StyleEditTextNull"
                    android:hint="@string/email" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout style="@style/StyleEditText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ContactUsFragment_TIET_Phone"
                    style="@style/StyleEditTextNull"
                    android:hint="@string/phone" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout style="@style/StyleEditText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ContactUsFragment_TIET_Content"
                    style="@style/StyleEditTextNull"
                    android:hint="@string/content"
                    android:inputType="textMultiLine"
                    android:lines="5" />

            </com.google.android.material.textfield.TextInputLayout>

            <RadioGroup
                android:id="@+id/ContactUsFragment_RG_Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_weight="3"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ContactUsFragment_RB_Estalam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingEnd="30dp"
                    android:text="@string/estalam" />

                <RadioButton
                    android:id="@+id/ContactUsFragment_RB_Suggest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingEnd="30dp"
                    android:text="@string/suggest" />

                <RadioButton
                    android:id="@+id/ContactUsFragment_RB_Problem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingEnd="30dp"
                    android:text="@string/problem" />
            </RadioGroup>

            <Button
                android:id="@+id/ContactUsFragment_BT_Send_Message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/txt_size_xl"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginBottom="@dimen/dimens_l"
                android:background="@color/colorButtonLogin"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/send"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimens_xxxxl"
                android:layout_marginTop="@dimen/dimens_xxl"
                android:layout_marginEnd="@dimen/dimens_xxxxl"
                android:layout_marginBottom="@dimen/dimens_xxxxl"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ContactUsFragment_IM_Instgram"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimens_l"
                    android:layout_weight="1"
                    android:src="@drawable/ic_instgram" />

                <ImageView
                    android:id="@+id/ContactUsFragment_IM_Twitter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimens_xxl"
                    android:layout_weight="1"
                    android:src="@drawable/ic_twitter" />

                <ImageView
                    android:id="@+id/ContactUsFragment_IM_Face_Book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimens_xxl"
                    android:layout_marginEnd="@dimen/dimens_xxl"
                    android:layout_weight="1"
                    android:src="@drawable/ic_face" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:fontFamily="@font/cairo_bold"
                    android:gravity="center"
                    android:text="@string/content_us_on"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/ContactUsFragment_Progress_Bar"
            style="@style/StyleProgressBar" />
    </RelativeLayout>
</ScrollView>